<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="customer.username">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
		
	</field>
	<field name="customer.password">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	
	<field name="customer.name">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	
	<field name="customer.contact">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
			
	<field name="customer.address1">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	
	<field name="customer.city">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	
	<field name="customer.postalCode">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	<field name="customer.phone">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
		<field-validator type="int">
			<message key="error.invalid.phone" />
		</field-validator>
	</field>
	<field name="customer.email">
	<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
		<field-validator type="email">
			<message key="error.invalid.email" />
		</field-validator>
	</field>
	<field name="customer.timeZone">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	
</validators>